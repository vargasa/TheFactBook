{

    "name": "TheFactBook Addon",
    "description": "Add Facts to your TFB Instance easily",
    "author": "Andr√©s Vargas",
    "version": "0.1",
    "manifest_version":2,

    "options_ui":{
        "page":"TFBOptions.html",
        "chrome_style":true
    },
    "icons": {
        "128": "Data/TFBIcon.png"
    },
    "permissions": [
        "storage",
        "contextMenus",
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"
    ],

    "background":{
        "default-title":"TFB",
        "scripts":["TFBMain.js"]
    },
    "browser_action":{
        "default_title": "TheFactBook Options",
        "default_popup": "TFBOptions.html"
    }
}
